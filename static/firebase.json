{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    
    "firestore": {
      "enabled": true,
      "port": 8484,
      "host": "0.0.0.0"
    },
    "storage": {
      "enabled": true,
      "port": 9199,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true,
      "port": 4000,
      "host": "0.0.0.0"
    },
    "hub": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 4400
    },
    "logging": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 4500
    },
    "functions": {
      "enabled": true,
      "port": 5001,
      "host": "0.0.0.0"
    },
    "auth": {
      "enabled": true,
      "port": 9099,
      "host": "0.0.0.0"
    },
    "pubsub": {
      "enabled": true,
      "port": 8085,
      "host": "0.0.0.0"
    },
    "hosting": {
      "enabled": true,
      "port": 5050,
      "host": "0.0.0.0"
    },
    "singleProjectMode": true
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  },
  "extensions": {}
}
